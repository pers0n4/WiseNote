root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4
indent_style = space

[*.java]
indent_size = 2
indent_style = space

[*.{kt,kts}]
indent_size = 4
indent_style = space

max_line_length = 100
disabled_rules=import-ordering
